<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.user.modernartui.MainActivity"
    android:background="#000000">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnCount="4"
        android:rowCount="4"
        android:layout_above="@+id/seekBar">

        <TextView
            android:id="@+id/textview_LeftTop"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:layout_gravity="fill"
            android:background="#6A77B7"

            android:layout_width="93dp" />


        <TextView
            android:id="@+id/textview_LeftBottom"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_gravity="fill"
            android:background="#D64F97" />

        <TextView
            android:id="@+id/textview_RightTop"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="3"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="fill"
            android:background="#A31D21" />

        <TextView
            android:id="@+id/textview_RightMiddle"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="3"
            android:layout_rowWeight="1"
            android:layout_rowSpan="2"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="fill"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/textview_RightBottom"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="3"
            android:layout_rowWeight="1"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="fill"
            android:background="#273A97" />

    </GridLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
